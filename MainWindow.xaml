<Window x:Class="NewPCSetupWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="NewPCSetupWPF"
        Width="1180"
        Height="920"
        MinWidth="1000"
        MinHeight="760"
        Loaded="Window_Loaded">
    <Window.Resources>
        <Style x:Key="SpinnerStyle" TargetType="Ellipse">
            <Setter Property="Visibility" Value="Collapsed" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsBusy}" Value="True">
                    <Setter Property="Visibility" Value="Visible" />
                    <DataTrigger.EnterActions>
                        <BeginStoryboard x:Name="SpinnerStoryboard">
                            <Storyboard RepeatBehavior="Forever">
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                 From="0"
                                                 To="360"
                                                 Duration="0:0:0.9" />
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                    <DataTrigger.ExitActions>
                        <StopStoryboard BeginStoryboardName="SpinnerStoryboard" />
                    </DataTrigger.ExitActions>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="220" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Padding="20"
                Margin="0,0,0,12"
                Background="{DynamicResource HeaderBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="14">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="240" />
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="New PC Setup"
                               FontSize="32"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}" />
                    <TextBlock Text="Graphical winget installer for essential Windows apps"
                               Margin="0,4,0,0"
                               Foreground="{DynamicResource TextMutedBrush}" />
                </StackPanel>

                <TextBlock Grid.Column="1"
                           Margin="0,0,12,0"
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"
                           Text="Theme"
                           Foreground="{DynamicResource TextMutedBrush}" />

                <ComboBox Grid.Column="2"
                          Height="36"
                          VerticalAlignment="Center"
                          ItemsSource="{Binding ThemeOptions}"
                          SelectedItem="{Binding SelectedTheme, Mode=TwoWay}"
                          DisplayMemberPath="DisplayName" />

                <TextBlock Grid.Column="3"
                           Margin="18,0,12,0"
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"
                           Text="Selector"
                           Foreground="{DynamicResource TextMutedBrush}" />

                <ComboBox Grid.Column="4"
                          Height="36"
                          VerticalAlignment="Center"
                          ItemsSource="{Binding SelectionProfiles}"
                          SelectedItem="{Binding SelectedProfile, Mode=TwoWay}"
                          DisplayMemberPath="DisplayName" />
            </Grid>
        </Border>

        <Border Grid.Row="1"
                Padding="16"
                Margin="0,0,0,12"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="340" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock VerticalAlignment="Center"
                               Margin="0,0,10,0"
                               FontWeight="SemiBold"
                               Text="Search"
                               Foreground="{DynamicResource TextMutedBrush}" />
                    <TextBox Width="250"
                             Height="34"
                             VerticalContentAlignment="Center"
                             Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Width="105"
                            Height="34"
                            Margin="0,0,8,0"
                            Content="Select All"
                            Click="SelectAll_Click"
                            IsEnabled="{Binding CanManageSelection}" />
                    <Button Width="105"
                            Height="34"
                            Margin="0,0,8,0"
                            Content="Select None"
                            Click="SelectNone_Click"
                            IsEnabled="{Binding CanManageSelection}" />
                    <Button Width="140"
                            Height="34"
                            Content="Refresh Installed"
                            Click="RefreshInstalled_Click"
                            IsEnabled="{Binding CanInstall}" />
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="2"
                Padding="16"
                Margin="0,0,0,12"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="12">
            <StackPanel>
                <TextBlock Text="Custom selector: add or remove apps at any time."
                           Foreground="{DynamicResource TextMutedBrush}" />

                <StackPanel Margin="0,8,0,0" Orientation="Horizontal">
                    <TextBlock Margin="0,0,8,0"
                               VerticalAlignment="Center"
                               Text="Name"
                               Foreground="{DynamicResource TextMutedBrush}" />
                    <TextBox Width="160"
                             Margin="0,0,12,0"
                             Height="34"
                             VerticalContentAlignment="Center"
                             Text="{Binding CustomAppName, UpdateSourceTrigger=PropertyChanged}"
                             IsEnabled="{Binding CanEditCatalog}" />

                    <TextBlock Margin="0,0,8,0"
                               VerticalAlignment="Center"
                               Text="Category"
                               Foreground="{DynamicResource TextMutedBrush}" />
                    <TextBox Width="140"
                             Margin="0,0,12,0"
                             Height="34"
                             VerticalContentAlignment="Center"
                             Text="{Binding CustomAppCategory, UpdateSourceTrigger=PropertyChanged}"
                             IsEnabled="{Binding CanEditCatalog}" />

                    <TextBlock Margin="0,0,8,0"
                               VerticalAlignment="Center"
                               Text="winget ID"
                               Foreground="{DynamicResource TextMutedBrush}" />
                    <TextBox Width="240"
                             Margin="0,0,12,0"
                             Height="34"
                             VerticalContentAlignment="Center"
                             Text="{Binding CustomAppWingetId, UpdateSourceTrigger=PropertyChanged}"
                             IsEnabled="{Binding CanEditCatalog}" />

                    <Button Width="110"
                            Height="34"
                            Margin="0,0,8,0"
                            Content="Add App"
                            Click="AddCustomApp_Click"
                            IsEnabled="{Binding CanEditCatalog}" />

                    <Button Width="170"
                            Height="34"
                            Margin="0,0,8,0"
                            Content="Remove Selected App"
                            Click="RemoveSelectedApp_Click"
                            IsEnabled="{Binding CanRemoveSelectedApp}" />

                    <Button Width="150"
                            Height="34"
                            Content="Reset Default List"
                            Click="ResetDefaultCatalog_Click"
                            IsEnabled="{Binding CanEditCatalog}" />
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Row="3"
                Padding="10"
                Margin="0,0,0,12"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="12">
            <ListView ItemsSource="{Binding AppItemsView}"
                      SelectedItem="{Binding SelectedAppItem, Mode=TwoWay}"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.ScrollUnit="Pixel"
                      ScrollViewer.CanContentScroll="True">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="74" Header="Select">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox HorizontalAlignment="Center"
                                              IsChecked="{Binding IsSelected, Mode=TwoWay}">
                                        <CheckBox.Style>
                                            <Style TargetType="CheckBox">
                                                <Setter Property="IsEnabled" Value="True" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsInstalled}" Value="True">
                                                        <Setter Property="IsEnabled" Value="False" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </CheckBox.Style>
                                    </CheckBox>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="200" Header="Name" DisplayMemberBinding="{Binding Name}" />
                        <GridViewColumn Width="120" Header="Category" DisplayMemberBinding="{Binding Category}" />
                        <GridViewColumn Width="280" Header="Winget ID" DisplayMemberBinding="{Binding WingetId}" />

                        <GridViewColumn Width="210" Header="Install Status">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding InstallStatus}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{DynamicResource TextMutedBrush}" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsInstalled}" Value="True">
                                                        <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="120" Header="Installed">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="10" Height="10" Margin="0,0,8,0">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Fill" Value="{DynamicResource BorderBrush}" />
                                                    <Setter Property="Opacity" Value="0.4" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsInstalled}" Value="True">
                                                            <Setter Property="Fill" Value="{DynamicResource SuccessBrush}" />
                                                            <Setter Property="Opacity" Value="1" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                        <TextBlock>
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="No" />
                                                    <Setter Property="Foreground" Value="{DynamicResource TextMutedBrush}" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsInstalled}" Value="True">
                                                            <Setter Property="Text" Value="Yes" />
                                                            <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <Border Grid.Row="4"
                Padding="16"
                Margin="0,0,0,12"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock VerticalAlignment="Center"
                           Foreground="{DynamicResource TextMutedBrush}"
                           Text="{Binding SelectionSummary}" />

                <Button Grid.Column="1"
                        Width="170"
                        Height="40"
                        Margin="0,0,10,0"
                        Content="Install Selected"
                        Click="InstallSelected_Click"
                        IsEnabled="{Binding CanInstall}" />

                <Button Grid.Column="2"
                        Width="140"
                        Height="40"
                        Margin="0,0,10,0"
                        Content="Install All"
                        Click="InstallAll_Click"
                        IsEnabled="{Binding CanInstall}" />

                <Button Grid.Column="3"
                        Width="130"
                        Height="40"
                        Content="Cancel Install"
                        Click="CancelInstall_Click"
                        IsEnabled="{Binding CanCancelInstall}" />
            </Grid>
        </Border>

        <Border Grid.Row="5"
                Padding="16"
                Margin="0,0,0,12"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <ProgressBar Grid.Row="0"
                             Height="22"
                             Minimum="0"
                             Maximum="{Binding ProgressMaximum}"
                             Value="{Binding ProgressValue}" />

                <Grid Grid.Row="1" Margin="0,12,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Text="{Binding StatusText}" />
                        <TextBlock Margin="0,4,0,0"
                                   Foreground="{DynamicResource TextMutedBrush}"
                                   Text="{Binding EtaText}" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Margin="0,0,14,0"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextMutedBrush}"
                                   Text="{Binding ProgressSummary}" />

                        <Grid Width="32" Height="32">
                            <Ellipse Width="24"
                                     Height="24"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Stroke="{DynamicResource AccentBrush}"
                                     StrokeThickness="3"
                                     StrokeDashArray="2 3"
                                     Style="{StaticResource SpinnerStyle}">
                                <Ellipse.RenderTransform>
                                    <RotateTransform CenterX="12" CenterY="12" />
                                </Ellipse.RenderTransform>
                            </Ellipse>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <Border Grid.Row="6"
                Padding="16"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Margin="0,0,0,8"
                           FontWeight="SemiBold"
                           Text="Execution Log (latest run)"
                           Foreground="{DynamicResource TextMutedBrush}" />

                <TextBox Grid.Row="1"
                         IsReadOnly="True"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Disabled"
                         FontFamily="Consolas, Cascadia Code, Segoe UI"
                         Text="{Binding LogText}" />
            </Grid>
        </Border>
    </Grid>
</Window>
