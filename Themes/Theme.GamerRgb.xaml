<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="BackgroundBrush" Color="#090A10" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="#111427" />
    <SolidColorBrush x:Key="HeaderBrush" Color="#181D34" />
    <SolidColorBrush x:Key="AccentBrush" Color="#00E8FF" />
    <SolidColorBrush x:Key="AccentSecondaryBrush" Color="#FF3BD4" />
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#F3F8FF" />
    <SolidColorBrush x:Key="TextMutedBrush" Color="#9CA7D2" />
    <SolidColorBrush x:Key="BorderBrush" Color="#2B3161" />
    <SolidColorBrush x:Key="SuccessBrush" Color="#4CFF8F" />
    <SolidColorBrush x:Key="WarningBrush" Color="#FFC84A" />

    <Style TargetType="Window">
        <Setter Property="Background" Value="{DynamicResource BackgroundBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        <Setter Property="FontFamily" Value="Consolas, Cascadia Code, Segoe UI" />
    </Style>

    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource AccentBrush}" />
        <Setter Property="Foreground" Value="#06111A" />
        <Setter Property="BorderBrush" Value="{DynamicResource AccentSecondaryBrush}" />
        <Setter Property="BorderThickness" Value="1.5" />
        <Setter Property="Padding" Value="14,8" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="Background" Value="#0F1330" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource AccentSecondaryBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="10,6" />
    </Style>

    <Style TargetType="ComboBox">
        <Setter Property="Background" Value="#0F1330" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource AccentSecondaryBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="8,4" />
    </Style>

    <Style TargetType="ListView">
        <Setter Property="Background" Value="#0E1432" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
    </Style>

    <Style TargetType="ListViewItem">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#1C2450" />
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#2A3380" />
                <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="GridViewColumnHeader">
        <Setter Property="Background" Value="#141D47" />
        <Setter Property="Foreground" Value="{DynamicResource AccentBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="Padding" Value="8,6" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style TargetType="ProgressBar">
        <Setter Property="Foreground" Value="{DynamicResource AccentSecondaryBrush}" />
        <Setter Property="Background" Value="#0A1029" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <Style TargetType="CheckBox">
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
    </Style>
</ResourceDictionary>
