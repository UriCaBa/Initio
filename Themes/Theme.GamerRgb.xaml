<!-- Theme.GamerRgb.xaml
     THEME: NEON CYBERPUNK / GAMER RGB
     A high-octane, dark mode theme with aggressive neon accents.
     Inspired by: Razor, Corsair iCUE, Cyberpunk 2077.
     Key colors: Carbon Black (#121212), Neon Green (#39FF14), Electric Pink (#FF00CC).
-->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ═══ Color Palette ═══ -->
    <Color x:Key="BackgroundColor">#0A0A0A</Color>
    <Color x:Key="SidebarColor">#0F0F0F</Color>
    <Color x:Key="HeaderColor">#0A0A0A</Color>
    <Color x:Key="SurfaceColor">#141414</Color>
    <Color x:Key="SurfaceHighColor">#1F1F1F</Color>
    <Color x:Key="OverlayColor">#2A2A2A</Color>
    <Color x:Key="InputBgColor">#000000</Color>
    <Color x:Key="BorderColor">#333333</Color>
    <Color x:Key="BorderLightColor">#555555</Color>

    <!-- Accent: RGB Rainbow (Primary is Neon Green) -->
    <Color x:Key="AccentColor">#39FF14</Color>
    <Color x:Key="AccentHoverColor">#66FF44</Color>
    <Color x:Key="AccentPressedColor">#22CC00</Color>
    <Color x:Key="AccentSecondaryColor">#FF00CC</Color> <!-- Electric Pink -->

    <!-- Semantic -->
    <Color x:Key="SuccessColor">#00FF00</Color>
    <Color x:Key="WarningColor">#FFFF00</Color>
    <Color x:Key="DangerColor">#FF0000</Color>

    <!-- Text -->
    <Color x:Key="TextPrimaryColor">#FFFFFF</Color>
    <Color x:Key="TextSecondaryColor">#E0E0E0</Color>
    <Color x:Key="TextMutedColor">#808080</Color>

    <!-- ═══ Brushes ═══ -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="SidebarBrush" Color="{StaticResource SidebarColor}" />
    <SolidColorBrush x:Key="HeaderBrush" Color="{StaticResource HeaderColor}" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}" />
    <SolidColorBrush x:Key="SurfaceHighBrush" Color="{StaticResource SurfaceHighColor}" />
    <SolidColorBrush x:Key="OverlayBrush" Color="{StaticResource OverlayColor}" />
    <SolidColorBrush x:Key="InputBgBrush" Color="{StaticResource InputBgColor}" />
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />
    <SolidColorBrush x:Key="BorderLightBrush" Color="{StaticResource BorderLightColor}" />

    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource AccentHoverColor}" />
    <SolidColorBrush x:Key="AccentPressedBrush" Color="{StaticResource AccentPressedColor}" />
    <SolidColorBrush x:Key="AccentSecondaryBrush" Color="{StaticResource AccentSecondaryColor}" />
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}" />
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}" />

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMutedColor}" />

    <!-- Gradient: Gamer RGB Spectrum -->
    <LinearGradientBrush x:Key="AccentGradientBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#FF0000" Offset="0" />
        <GradientStop Color="#00FF00" Offset="0.5" />
        <GradientStop Color="#0000FF" Offset="1" />
    </LinearGradientBrush>

    <!-- ═══ Typography ═══ -->
    <FontFamily x:Key="AppFont">Segoe UI, Arial, sans-serif</FontFamily>
    <FontFamily x:Key="MonoFont">Consolas, Courier New</FontFamily>

</ResourceDictionary>
